<div id="add-feed">
  <%= output_errors(t('muck.raker.problem_adding_feed'), {:class => 'help-box'}, @feed) %>
  <% custom_form_for(:feed, :url => select_feeds_feed_previews_path) do |f| -%>
    <%= f.text_field :uri, { :label => t('muck.raker.add_feed_url' ) }  %>
    <div class="button form-row">
      <%= submit_tag t('muck.raker.add_feed'), :id => 'add_feed_uri' %>
      <span id="finding_uri_message" style="display:none;">
        <%= t('muck.raker.discover_feed_message') %><img src="/images/loading.gif" alt="Loading content image" />
      </span>
    </div>
  <% end -%>
</div>
<% content_for :javascript do -%>
jQuery(document).ready(function() {
  jQuery('#add_feed_uri').click({
    jQuery(this).hide();
    jQuery('#finding_uri_message').show();
  });
});
<% end -%>