<div id="add_single_feed">
  <h1><%= t('muck.raker.add_extended_feed_title') %></h1>
  <p><%= t('muck.raker.add_extended_feed_sub_title') %></p>
  <%= error_messages_for :feed -%>
  <% custom_form_for(:feed, :url => new_feed_path_with_parent(parent)) do |f| -%>
    <%= f.text_field :title, { :label => t('muck.raker.title' ) }  %>
    <%= f.text_field :short_title, { :label => t('muck.raker.short_title' ) }  %>    
    <%= f.text_field :harvested_from_title, { :label => t('muck.raker.repository_title' ) }  %>
    <%= f.text_field :harvested_from_short_title, { :label => t('muck.raker.repository_short_title' ) }  %>  
    <%= f.text_field :uri, { :label => t('muck.raker.collection_uri' ) }  %>
    <%= f.text_field :display_uri, { :label => t('muck.raker.collection_home_uri' ) }  %>
    <%= f.text_area :description, { :label => t('muck.raker.collection_description' ) }  %>
    <%= f.muck_raker_language_select :default_language_id, { :label => t('muck.raker.add_feed_url' ) }  %>
    <%= f.muck_raker_service_select :service_id, { :label => t('muck.raker.type_of_metadata'),
                                                   :tip => t('muck.raker.oai_prompt') } %>
    <div class="button form-row">
      <%= submit_tag t('muck.raker.add_feed'), :id => 'add_feed_uri' %>
      <span id="finding_uri_message" style="display:none;">
        <%= t('muck.raker.submitting_feed_message') %><img src="/images/loading.gif" alt="Loading content image" />
      </span>
    </div>
  <% end -%>
</div>
<% content_for :javascript do -%>
jQuery(document).ready(function() {
    jQuery('#add_feed_uri').click({
        jQuery(this).hide();
        jQuery('#finding_uri_message').show();
    });
});
<% end -%>