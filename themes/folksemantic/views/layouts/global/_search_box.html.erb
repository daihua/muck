<div id="search-controls">
  <% form_tag(:controller => '/search', :action => 'results') do -%>
    <%= text_field_tag(:form_terms, @terms.nil? ? t('folksemantic.search') : @terms, :id => 'search-box') %>
    <%= submit_tag(t('folksemantic.search_button'), :class => "input-button") %>
    <div id="user-login">
      <% if logged_in? -%>
        <%= link_to t('folksemantic.welcome_user', :user => current_user.login), current_user %>
      <% else -%>
        <%= link_to t('muck.users.sign_up'), signup_path %> | <%= link_to t('muck.users.sign_in'), login_path %> <img src="/images/folksemantic/flags/flag_en.png" style="vertical-align:middle"/>
      <% end -%>
    </div>
  <% end -%>
</div>